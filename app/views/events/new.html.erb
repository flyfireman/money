<h1>New event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description,:class => "mceEditor" %>
  </p>
  <p>
    <%= f.label :done %><br />
    <%= f.check_box :done %>
  </p>
  <p>
    <%= f.label :due_date_at %><br />
    <%= f.datetime_select("due_date_at", :start_year => 1940, :end_year => Date.current.year) %>
  </p>
  
  <p>
    <%= show_simple_captcha(:object => 'event') %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>