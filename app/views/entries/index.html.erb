<h1>Listing entries</h1>

<table>
  <thead>
    <tr>
      <th class="center">Date</th>
      <th class="center">Amount</th>
      <th class="center">tag_list</th>
      <th class="center">Comment</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |entry| %>
      <tr class="<%= cycle('odd', 'even')%>">
        <td class="center"><%=h entry.effective_date_at %></td>
        <td class="right"><%=h entry.amount %></td>
        <td><%=h entry.tag_list %></td>
        <td><%=h entry.comment %></td>

        <td class="center">
          <%= link_to 'Edit', edit_entry_path(entry) %>
          <%= link_to 'Destroy', entry, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New entry', new_entry_path %>